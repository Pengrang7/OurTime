# OurTime Backend Environment Variables
# 실제 값은 application-local.yml 또는 시스템 환경 변수로 설정하세요

# Database Configuration
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/ourtime?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRATION=86400000

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET_NAME=your_s3_bucket_name_here
AWS_S3_REGION=ap-northeast-2

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif

# Email Configuration (선택사항)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Naver Map API (프론트엔드용)
REACT_APP_NAVER_MAP_CLIENT_ID=your_naver_map_client_id_here
REACT_APP_API_URL=http://localhost:8080/api
